    <style type="text/css">
    body {
        font-family: arial;
    }
    .box { 
        position: absolute;
        font-size: 2em;
        color: black;
        width: 320px;
        height: 240px;
        display: none;
        border: 3px solid black;
        background: white;
        padding: 8px;
    }
    .box .top {
        position: relative;
    }
    .box .close a {
        border: 1px solid #e7e7e7;  
        padding: 5px;
        font-size: 0.7em;
        text-decoration: none;
        position: absolute;
        right: 0px;
    }
    .box .close a:hover {
        background: red;
    }
    .box-1 {
        top: 35%;
        left: 2%;
        /*display: block;*/
    }
    .box-2 {
        top: 35%;
        left: 10%;
    }
    .box-3 {
        top: 35%;
        left: 18%;
    }
</style>
<script type="text/javascript">

$(function() {

    // create mask for underneath the boxes
    var mask1 = $('.box-1').gelscreenmask({zIndex: 2}),
        mask2 = $('.box-2').gelscreenmask({zIndex: 4}),
        mask3 = $('.box-3').gelscreenmask({zIndex: 6});

    // open a mask
    $('#open1').bind('click', function() {
        mask1.gelscreenmask('open');
        $('.box-1').css({'z-index': 3, 'display': 'block'});
    });

    $('#open2').bind('click', function() {
        mask2.gelscreenmask('open');
        $('.box-2').css({'z-index': 5, 'display': 'block'});
    });

    $('#open3').bind('click', function() {
        mask3.gelscreenmask('open');
        $('.box-3').css({'z-index': 7, 'display': 'block'});
    });

    // close a mask
    $('.box-1 .close a').bind('click', function() {
        $('.box-1').css("display", "none");
        mask1.gelscreenmask('close');
    });

    $('.box-2 .close a').bind('click', function() {
        $('.box-2').css("display", "none");
        mask2.gelscreenmask('close');
    });

    $('.box-3 .close a').bind('click', function() {
          $('.box-3').css("display", "none");
          mask3.gelscreenmask('close');
    });

});

</script>
</head>
